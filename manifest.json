{
  "manifest_version": 2,
  "name": "stackypie",
  "version": "1.0",
  "description": "Copy selection from any website with one click.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "permissions": [
    "clipboardWrite"
  ]
}